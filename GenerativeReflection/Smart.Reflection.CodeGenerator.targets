<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);SmartReflectionCodeGenerator;</CoreCompileDependsOn>
  </PropertyGroup>

  <PropertyGroup>
    <IntermediateOutputPath Condition="$(IntermediateOutputPath) == ''">$(MSBuildProjectDirectory)obj\$(Configuration)\</IntermediateOutputPath>
  </PropertyGroup>

  <Target Name="SmartReflectionCodeGenerator" BeforeTargets="CoreCompile">
    <PropertyGroup>
      <SmartReflectionCodeGenerator>dotnet "$(MSBuildThisFileDirectory)..\..\tools\Smart.Reflection.CodeGenerator.dll" "$(IntermediateOutputPath)Smart.Reflection.CodeGenerator.g.cs" "$(MSBuildProjectDirectory)"</SmartReflectionCodeGenerator>
    </PropertyGroup>

    <Exec Command="$(SmartReflectionCodeGenerator)" />

    <Message Text="Smart.Reflection.CodeGenerator proccessed" />

    <ItemGroup Condition="Exists('$(IntermediateOutputPath)Smart.Reflection.CodeGenerator.g.cs')">
      <Compile Include="$(IntermediateOutputPath)Smart.Reflection.CodeGenerator.g.cs" />
    </ItemGroup>
  </Target>

</Project>
